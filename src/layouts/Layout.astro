---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full bg-black">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="h-full flex flex-col">
    <menu
      class="flex-none basis-16 bg-neutral-900 text-white flex justify-center items-center space-x-4"
    >
      <a href="/" class="text-2xl font-bold underline">Home</a>
      <a href="/dots" class="text-2xl font-bold underline">Dots</a>
      <a href="/letters" class="text-2xl font-bold underline">Letters</a>
    </menu>
    <div class="flex-1 flex justify-center items-center">
      <slot />
    </div>
  </body>
</html>
